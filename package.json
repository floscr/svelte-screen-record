{
    "name": "screen-record-app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:client": "vite",
        "dev:server": "tsx watch src/server",
        "dev": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:server\"",
        "build:client": "vite build",
        "build:server": "tsc --project tsconfig.server.json",
        "build": "npm run build:client && npm run build:server",
        "start": "node dist",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "e2e": "playwright test",
        "test": "vitest",
        "format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
        "lint": "eslint './src/**/*.{js,ts,svelte}'",
        "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
        "@playwright/test": "^1.41.1",
        "@sveltejs/vite-plugin-svelte": "^3.0.1",
        "@tsconfig/svelte": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.16",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "postcss": "^8.4.32",
        "postcss-load-config": "^5.0.2",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.2.1",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "svelte": "^4.2.9",
        "svelte-check": "^3.6.3",
        "tailwindcss": "^3.3.6",
        "tslib": "^2.6.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vitest": "^1.2.2"
    },
    "dependencies": {
        "@statelyai/inspect": "^0.2.3",
        "@trpc/client": "^10.45.0",
        "@trpc/server": "^10.7.0",
        "@xstate/svelte": "^3.0.2",
        "compression": "^1.7.4",
        "express": "^4.18.2",
        "flowbite": "^2.3.0",
        "flowbite-svelte": "^0.44.23",
        "sirv": "^2.0.4",
        "superjson": "^2.2.1",
        "ts-pattern": "^5.0.8",
        "ws": "^8.16.0",
        "xstate": "^5.7.1"
    }
}
